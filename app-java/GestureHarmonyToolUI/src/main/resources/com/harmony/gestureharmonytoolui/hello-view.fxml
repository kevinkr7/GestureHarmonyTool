<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.web.WebView?>

<VBox alignment="TOP_CENTER" spacing="15.0"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.harmony.gestureharmonytoolui.HarmonyController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- Session Info -->
    <Label fx:id="sessionLabel" text="Session not yet created"/>

    <!-- Live Camera View -->
    <WebView fx:id="cameraView"
             prefWidth="800.0"
             prefHeight="450.0"
             visible="false"/>

    <!-- Device Selection -->
    <ComboBox fx:id="videoDeviceComboBox"
              promptText="Select Camera"
              prefWidth="300.0"/>

    <ComboBox fx:id="audioDeviceComboBox"
              promptText="Select Microphone"
              prefWidth="300.0"/>

    <!-- Buttons -->
    <HBox spacing="15.0" alignment="CENTER">
        <Button fx:id="createSession"
                text="Create Session"
                onAction="#createSessionOnClick"/>

        <Button fx:id="startRecording"
                text="Start Recording"
                disable="true"
                onAction="#startRecordingOnClick"/>

        <Button fx:id="stopRecording"
                text="Stop Recording"
                disable="true"
                onAction="#stopRecordingOnClick"/>
    </HBox>

    <!-- Status -->
    <Label fx:id="status" text="Status: "/>

</VBox>